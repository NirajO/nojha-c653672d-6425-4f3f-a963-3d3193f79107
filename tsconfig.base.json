{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@org/data": ["data/src/index.ts"],
      "@org/auth": ["auth/src/index.ts"],
      "@org/auth-ui": ["libs/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
